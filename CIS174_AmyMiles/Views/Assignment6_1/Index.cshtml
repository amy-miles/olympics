
@model CIS174_AmyMiles.Models.Assignment6_1ViewModel

<h2>Assignment 6-1</h2>

@if (Model.AccessLevel < 2)
{
    <p>You do not have sufficient access level to view this data.</p>
}
else
{
    @if (Model.AccessLevel >= 8)
    {
       <h3>Hello Admin!</h3>
    }
    
    <table class="table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                @if (Model.AccessLevel >= 8)
                {
                    <th>Grade</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model.Students)
            {
                <tr>
                    <td>@student.FirstName</td>
                    <td>@student.LastName</td>
                    @if (Model.AccessLevel >= 8)
                    {
                        <td>@student.Grade</td>
                    }
                </tr>
            }
        </tbody>
    </table>
}
